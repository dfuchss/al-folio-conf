---
layout: default
---
{% if page._styles %}
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  {% if page.hidden_title != true %}
    <header class="post-header">
      <h1 class="post-title">{{ page.title }}</h1>
      <p class="post-description">{{ page.description }}</p>
    </header>
  {% endif %}

  <article>
    {% if page.team %}
      {% for team in page.team %}
        {% if forloop.index0 != 0 %}
          <hr>
        {% endif %}
        {% assign columns = team.columns | default: 2 %}
        <h2>{{ team.title }}</h2>

        <div class="team-row" style="display: flex; flex-wrap: wrap;">

          {% for member in team.members %}
            <div class="team-member" style="flex: 1 1 calc(100% / {{ columns }} - 20px);">
              <a href="{% if member.url %}{{ member.url | relative_url }}{% endif %}">
                <p>
                  {% if member.image %}
                    {% include figure.liquid 
                      path=member.image 
                      loading="eager" 
                      alt=member.name 
                      width="250px" %}
                  {% endif %}
                </p>
                <p>
                  {{ member.name }}<br>
                  {{ member.affiliation }}
                </p>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    {% endif %}
    {{ content }}
  </article>
</div>
