---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <article>
    {% if page.venue %}
      <h2 class="text-center">{{ page.venue }}</h2>
    {% endif %}
    {% if page.confdate %}
      <p class="lead text-center">{{ page.confdate }}</p>
    {% endif %}
    {% if page.frontimage %}
      <!-- Image Centered -->
      <div class="text-center">
        {%
          include figure.liquid
          path=page.frontimage
          alt=page.frontimage_alt
          width="100%"
        %}
        <p class="text-right">
          <small>
            <a href="{{page.frontimage_copy_link}}">{{ page.frontimage_copy }}</a>
          </small>
        </p>
      </div>
    {% endif %}
    {% if page.important_dates %}
      <div class="alert alert-warning" role="alert">
        {% if site.lang == 'de' %}
          <h4 class="alert-heading">Wichtige Daten</h4>
        {% else %}
          <h4 class="alert-heading">Important Dates</h4>
        {% endif %}
        <ul>
          {% for date in page.important_dates %}
            <li>{{ date }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {{ content }}
  </article>
</div>
