---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  {% if page.hidden_title != true %}
    <header class="post-header">
      <h1 class="post-title">{{ page.title }}</h1>
      <p class="post-description">{{ page.description }}</p>
    </header>
  {% endif %}

  <style>
    @media (max-width: 600px) {
      .keynote-image {
        float: none !important;
        margin-left: 0 !important;
        margin-bottom: 20px;
        width: 100% !important;
      }
    }
  </style>

  <article>
    {% for keynote in page.keynotes %}
      {% if forloop.index0 != 0 %}
        <hr>
      {% endif %}
      <h2>
        {{ keynote.meta }}
        <br>
        <strong>{{ keynote.speaker }}</strong>: <em>{{ keynote.title }}</em>
      </h2>
      {% if keynote.image %}
        <div class="keynote-image" style="float: right; margin-left: 20px; width: 250px; max-width: 100%;">
          <img src="{{ keynote.image | relative_url }}" alt="{{ keynote.speaker }} - {{ keynote.title }}" style="width: 100%;">
        </div>
      {% endif %}
      <p>
        {{ keynote.abstract }}
      </p>
      <p><strong>About the speaker</strong>: {{ keynote.bio }}</p>
    {% endfor %}

    {{ content }}
  </article>
</div>
